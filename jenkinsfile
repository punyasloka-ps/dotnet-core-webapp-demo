pipeline {
    agent any
    parameters {
        string(name: 'azure-app-resourcegroup', defaultValue: 'qe-training', description: 'Azure Resource Group')
        string(name: 'azure-app-name', defaultValue: 'QE-COE', description: 'Azure WebApp Name')
        credentials(name: 'azure-sp-id', credentialType: 'Microsoft Azure Service Principal', defaultValue: 'azure-sp-id', description: 'Azure WebApp Name')
    }
    triggers {
       cron('* * * * *')
    }
    stages {
        stage('Restore packages') { 
            steps {
                sh "dotnet restore dotnet-core-webapp-demo.csproj"
            }
        }
        stage('Clean Packages') { 
            steps {
                sh "dotnet clean dotnet-core-webapp-demo.csproj"
            }
        }
        stage('Build') { 
            steps {
                sh "dotnet build dotnet-core-webapp-demo.csproj --configuration Release"
            }
        }
        stage('Publish') { 
            steps {
                sh "dotnet publish dotnet-core-webapp-demo.csproj"
            }
        }
        stage('Deploy') {
            steps {
                azureWebAppPublish appName: "${params.azure-app-name}",azureCredentialsId: "${params.azure-sp-id}",resourceGroup: "${params.azure-app-resourcegroup}",sourceDirectory: "src/dotnet-core-webapp-demo/bin/Release/netcoreapp3.1/publish/"
            }
        }
    }
}